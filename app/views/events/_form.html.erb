<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2>Erros proibiram esse evento de ser salvo:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label 'Nome', style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label 'Data', style: "display: block" %>
    <%= form.datetime_field :schedule %>
  </div>

  <div>
    <%= form.label 'Localização', style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label 'Descrição', style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit('Criar evento') %>
  </div>
<% end %>
